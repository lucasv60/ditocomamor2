generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model LovePage {
  id          String   @id @default(cuid())
  pageName    String   @unique
  pageTitle   String
  startDate   DateTime
  loveText    String
  youtubeUrl  String?
  photos      Json     // Array de objetos com url, caption, public_id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
